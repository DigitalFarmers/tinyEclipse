# ===========================================
# TinyEclipse Environment Configuration
# Copy this to .env and fill in your values
# ===========================================

# Database
DB_PASSWORD=changeme
DATABASE_URL=postgresql+asyncpg://tinyeclipse:changeme@db:5432/tinyeclipse

# Groq (free tier - get key at https://console.groq.com)
GROQ_API_KEY=gsk_your-key-here
GROQ_CHAT_MODEL=llama-3.3-70b-versatile

# Embeddings (local model, no API key needed)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Dokploy Domains (Traefik auto-routes + HTTPS)
API_DOMAIN=api.tinyeclipse.digitalfarmers.be
ADMIN_DOMAIN=admin.tinyeclipse.digitalfarmers.be

# Application
APP_SECRET_KEY=change-this-to-a-random-string
ADMIN_API_KEY=change-this-to-a-random-string
CORS_ORIGINS=https://admin.tinyeclipse.digitalfarmers.be,https://staging.chocotale.online,https://chocotale.be

# Rate Limits (per tenant)
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_DAY=500

# Confidence Thresholds
CONFIDENCE_ESCALATE_THRESHOLD=0.6
CONFIDENCE_REFUSE_THRESHOLD=0.3

# Widget
WIDGET_BASE_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO
